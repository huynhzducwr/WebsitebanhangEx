@model IEnumerable<WebsitebanhangEx.Models.Product>

@{
    ViewBag.Title = "ProductAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@200&display=swap" rel="stylesheet">

<h2 id="title-cate">Product </h2>
<p class="aref">
    @Html.ActionLink("Tạo mới", "Create")
</p>


@using (Html.BeginForm("ProductAdmin", "Product", FormMethod.Post, new { @class = "my-form-class", action = "/Admin/Product/ProductAdmin" }))
{
    <input type="text" name="_name" class="text-box" />
    <input type="submit" value="Search" class="search-button" />


    <table class="table" style="margin-top:25px;">
        <tr>
            <th style="padding-right: 150px;">
                @Html.DisplayNameFor(model => model.ProductID)
            </th>
            <th style="padding-right: 258px;">
                @Html.DisplayNameFor(model => model.NamePro)
            </th>

            <th> @Html.DisplayNameFor(model => model.ImagePro)</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NamePro)
                </td>
              
                <td><img src="@Url.Content(item.ImagePro)" height="80" width="80" /></td>
                
                <td>


                    @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID })
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID })
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ProductID })



                </td>


            </tr>


        }



    </table>



}




