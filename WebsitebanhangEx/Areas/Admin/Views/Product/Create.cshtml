@model WebsitebanhangEx.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

<style>
    .custom-label {
        font-weight: bold; /* In đậm chữ cho label */
        color: #333; /* Màu chữ */
        margin-bottom: 10px;
        margin-bottom: 10px;
    }

    .custom-editor {
        border: 1px solid #ccc; /* Viền đường viền */
        padding: 5px; /* Khoảng cách bên trong phần nhập liệu */
        border-radius: 5px; /* Bo góc cho phần nhập liệu */
        width: 200px; /* Độ rộng mong muốn */
        margin-top: 20px;
        margin-bottom: 10px;
    }

    .custom-rendered-action {
        /* Thêm các thuộc tính CSS mà bạn muốn áp dụng cho phần RenderAction */
        /* Ví dụ: */
        background-color: #f0f0f0;
        padding: 10px;
    }
    /* Định nghĩa lớp CSS cho nút "Tạo mới" */
    .btn-primary {
        margin-top: 10px;
        background-color: #ccc; /* Màu nền */
        color: #333; /* Màu chữ */
        padding: 10px 20px; /* Kích thước nút */
        border: none; /* Loại bỏ viền */
        border-radius: 5px; /* Bo góc */
        cursor: pointer;
    }

    /* Định nghĩa lớp CSS cho nút "Hủy bỏ" */
    .btn-secondary {
        background-color: #ccc; /* Màu nền */
        color: #333; /* Màu chữ */
        padding: 10px 20px; /* Kích thước nút */
        border: none; /* Loại bỏ viền */
        border-radius: 5px; /* Bo góc */
        cursor: pointer;
    }
</style>



<div style="display:flex; justify-content:space-around">
    <h2>THÊM MỚI SẢN PHẨM</h2>
</div>
<div style="height:810px;padding-left:490px;">

    @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div style="width:50%; float:left">

            @Html.LabelFor(model => model.NamePro, new { @class = "custom-label" })<br />
            @Html.EditorFor(model => model.NamePro, new { htmlAttributes = new { @class = "custom-editor" } })<br />



            @Html.LabelFor(model => model.Price, new { @class = "custom-label" })<br />
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "custom-editor" } })<br />



            @Html.LabelFor(model => model.Category, new { @class = "custom-label" })<br />
            <br />
            @Html.DropDownListFor(model => model.Category, (SelectList)ViewBag.listCategory)
            <br />

            @Html.LabelFor(model => model.Handsize, new { @class = "custom-label" })<br />
            <br />
            @Html.DropDownListFor(model => model.Handsize, (SelectList)ViewBag.listHandsize)
            <br />

            @Html.LabelFor(model => model.Nentang, new { @class = "custom-label" })<br />
            <br />
            @Html.DropDownListFor(model => model.Nentang, (SelectList)ViewBag.listNentang)
            <br />




            @Html.LabelFor(model => model.DecriptionPro, new { @class = "custom-label" })<br />
            @Html.EditorFor(model => model.DecriptionPro, new { htmlAttributes = new { @class = "custom-editor" } })<br />


            @Html.LabelFor(model => model.Quantity, new { @class = "custom-label" })<br />
            @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "custom-editor" } })<br />


            @Html.LabelFor(model => model.IsHot, new { @class = "custom-label" })
            @Html.EditorFor(model => model.IsHot)
            @Html.LabelFor(model => model.IsSale, new { @class = "custom-label" })
            @Html.EditorFor(model => model.IsSale)
            @Html.LabelFor(model => model.IsNew, new { @class = "custom-label" })
            @Html.EditorFor(model => model.IsNew)<br />
        </div>
        <div style="width:50%;float:right">

            @Html.LabelFor(model => model.ThongSo, new { @class = "custom-label" })<br />
            @Html.EditorFor(model => model.ThongSo, new { htmlAttributes = new { @class = "custom-editor" } })<br />


            @Html.LabelFor(model => model.Tuongthich, new { @class = "custom-label" })<br />
            @Html.EditorFor(model => model.Tuongthich, new { htmlAttributes = new { @class = "custom-editor" } })<br />


            @Html.LabelFor(model => model.Tronghop, new { @class = "custom-label" })<br />
            @Html.EditorFor(model => model.Tronghop, new { htmlAttributes = new { @class = "custom-editor" } })<br />


            @Html.LabelFor(model => model.Hotro, new { @class = "custom-label" })<br />
            @Html.EditorFor(model => model.Hotro, new { htmlAttributes = new { @class = "custom-editor" } })<br />


            @*@Html.LabelFor(model => model.Color, new { @class = "custom-label" })<br />
                @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "custom-editor" } })<br />*@


            @Html.LabelFor(model => model.ImagePro, new { @class = "custom-label" })

            <img src="@Url.Content(Model.ImagePro)" height="150" width="150" id="previewImg" /><br />

            <input type="file" name="UploadImage" onchange="ChangeImage(this, document.getElementById('previewImg'))" /><br />

            <input type="submit" value="Tạo mới" class="btn-primary"  />
            <input type="submit" value="Hủy bỏ" class="btn-secondary" />
        </div>


    }



