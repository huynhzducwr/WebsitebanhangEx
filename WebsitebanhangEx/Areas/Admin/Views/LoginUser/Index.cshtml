@model WebsitebanhangEx.Models.AdminUser
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@200;300&display=swap" rel="stylesheet">
<style>
    .body {
        font-family: 'Lexend Deca', sans-serif;
    }

    .field-validation-error {
        color: red;
    }

    .logo {
        margin: 20px;
        background-size: contain;
        height: 60px;
    }

    .centered {
        margin-left: auto;
        margin-right: auto;
        text-align: center;
        padding-left: 200px;
    }

    .description {
        color: #2F3132;
        font-weight: 300;
        font-size: 16px;
        margin: 0 0 20px;
        font-family: 'Lexend Deca', sans-serif;
    }

    .containerr {
        display: flex;
        justify-content: center;
        padding-left: 307px;
    }

    .form-label {
        color: dimgray;
        font-size: medium;
        font-family: 'Lexend Deca', sans-serif;
    }

        .form-label.left {
            position: absolute;
            left: 0px;
            top: 12px;
        }


    .text-box.single-line.password {
        /* Tùy chỉnh kiểu chữ, màu nền, và đặc điểm khác cho trường mật khẩu */
        width: 100%;
        height: 45px;
        font-size: 1em;
        font-family: inherit;
        font-weight: 200;
        color: #2F3132;
        background-color: white;
        box-sizing: border-box;
        border: none;
        padding: 1px 10px 6px 5px;
        filter: none;
        cursor: text;
        transition: border-bottom 0.3s; /* Add a transition for the bottom border */
        border-bottom: 1px solid dimgrey; /* Initially, set the bottom border to transparent */
    }

    .field-validation-error {
        border-color: dimgray;
    }


    .validation-message {
        color: #f00;
    }

    .login-button {
        padding-top: 15px;
        text-align: center;
        width: 460px;
        height: 55px;
        color: #fff;
        margin-left: 604px;
        background-color: #2F3132;
        border: 2px solid transparent;
        transition: 0.2s;
        margin-left: auto;
        padding-top: 5px;
        font-family: 'Lexend Deca', sans-serif;
        font-size: medium;
        font-weight: 700;
    }

        .login-button:hover {
            color: black;
            border: 2px solid black;
            background-color: transparent;
            cursor: pointer;
        }

    .field {
        display: block;
        position: relative;
        margin: auto;
        width: 405px;
    }

    .eye_i {
        margin: 10px;
        padding-right: 0;
        cursor: pointer;
    }

    .field11 {
        display: flex;
        position: relative;
        margin: auto;
        width: 405px;
    }

        .field11 input {
            width: 100%;
            height: 45px;
            font-size: 1em;
            font-family: inherit;
            font-weight: 200;
            color: #2F3132;
            background-color: white;
            box-sizing: border-box;
            border: none;
            padding: 1px 10px 6px 5px;
            filter: none;
            cursor: text;
            transition: border-bottom 0.3s; /* Add a transition for the bottom border */
            border-bottom: 1px solid dimgrey;
            outline: 0;
        }

    .field1 {
        display: flex;
        position: relative;
        margin: auto;
        width: 405px;
    }

        .field1 input {
            width: 100%;
            padding: 10px 0;
            border: 0;
            outline: 0;
            font-size: 4px;
            color: #555;
        }

        .field1 img {
            width: 30px;
            height: 20px;
            cursor: pointer;
        }

    .link_text {
        font-weight: 300;
        color: #697172;
        font-size: 16px;
        margin: 30px 0 20px 0;
        width: 421px;
        font-family: 'Lexend Deca', sans-serif;
        padding-left: 0px;
        padding-right: 136px;
    }

    a {
        color: black;
        cursor: pointer;
        text-decoration: underline;
        font-family: 'Lexend Deca', sans-serif;
    }

        a:hover {
            color: dimgray;
        }

    .text_or {
        text-align: center;
        padding: 10px;
        color: #697172;
        font-family: 'Lexend Deca', sans-serif;
        padding-right: 160px;
    }

    .registerr {
        align-items: center;
    }
</style>


<div class="logo centered">
    <img src="https://id.logi.com/dccd9087eb658a5474eb27d1b43901a4.svg" alt="Logitech">
</div>
<div class="description centered">Đăng nhập bằng ID Extend Tech.</div>
@using (Html.BeginForm("LoginAcount", "LoginUser"))
{
    @Html.AntiForgeryToken()


    <div class="containerr">
        <div class="formm">
            <div class="field">
                @Html.LabelFor(model => model.NameUser, new { @class = "form-label" })<br />
                <div class="field11">
                    @Html.TextBoxFor(model => model.NameUser, new { @class = "styled_input field-validation-error" })
                    @Html.ValidationMessageFor(model => model.ID)
                </div>

            </div>

            <div class="field">
                <br />
                @Html.LabelFor(model => model.PasswordUser, new { @class = "form-label" })<br />
                <div class="field1">
                    @Html.EditorFor(model => model.PasswordUser)
                    <img src="~/Content/images/eye-close.png" id="eyeicon" />
                    @Html.ValidationMessageFor(model => model.PasswordUser)

                </div>
                <script>
                    let eyeicon = document.getElementById("eyeicon");
                    let PasswordUser = document.getElementById("PasswordUser");

                    eyeicon.onclick = function () {
                        if (PasswordUser.type == "password") {
                            PasswordUser.type = "text";
                            eyeicon.src = "/Content/images/eye-open.png";
                        }
                        else {
                            PasswordUser.type = "password";
                            eyeicon.src = "/Content/images/eye-close.png";
                        }
                    }

                </script>


            </div>
            <div class="link_text centered">
                Trang wed này được bảo vệ bởi hCaptcha và áp dụng
                <a href="https://hcaptcha.com/privacy" target="_blank">Chính sách Quyền riêng tư</a> và
                <a href="https://hcaptcha.com/terms" target="_blank">Điều khoản Dịch vụ</a>.
            </div>

            @if (ViewBag.ErrorInfo == null)
            {<p>@ViewBag.ErrorInfo</p>
        }


            <input type="submit" value="Đăng nhập" class="login-button" />
            <p class="text_or">HOẶC</p>
            <p class="text_or"><a class="registerr" href="https://localhost:44349/LoginUser/RegisterUser">Tạo tài khoản</p>





        </div>

    </div>



}


