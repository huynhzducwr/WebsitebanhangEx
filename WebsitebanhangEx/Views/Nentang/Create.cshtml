@model WebsitebanhangEx.Models.Nentang
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@200&display=swap" rel="stylesheet">
<style>
    .container {
        height: 500px;
        float: right;
        width: 70%;
        background-color: #f4f4f4;
    }

    #title-cate {
        font-size: x-large;
    }

    a {
        text-decoration: none;
        color: black;
        font-family: 'Lexend Deca', sans-serif;
    }

        a:hover {
            text-decoration: underline;
        }

    .my-form-class {
        margin: auto;
    }

    .avz {
        float: left;
        background-color: #f4f4f4;
        width: 30%;
        height: 500px;
    }

    #idcatee {
        margin-right: 100px;
    }

    .form-horizontall {
        margin-left: -30px;
    }

    .btn-default {
        background-color: #0074cc;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        top: 77%;
    }

        .btn-default:hover {
            background-color: #0058a6;
        }

    .form-control {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 5px;
        font-size: 16px;
        margin-top: 10px;
    }


    .text-danger {
        color: red;
        font-size: 14px;
    }
</style>
<div class="avz">


</div>

<div class="container">
    <h2>Tạo mới</h2>


    @using (Html.BeginForm(new { @class = "my-form-class" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal form-horizontall">
            <h4>Nền tảng</h4>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.IDBase, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IDBase, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IDBase, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NameBase, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NameBase, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NameBase, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <br />
    <div style="margin-top:50px;">
        @Html.ActionLink("Trở về danh sách", "Index")
    </div>
</div>
